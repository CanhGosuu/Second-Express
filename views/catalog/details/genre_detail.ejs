<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../layouts/head %>
</head>

<body class="container">
    <!-- header -->
    <% include ../../layouts/header %>
    <!-- main -->
    <h1>
        Genre:
        <%=genre.name%>
    </h1>
    <div style="margin-left:20px;margin-top:20px">
        <h4>Books</h4>
        <dl>
            <%if(genre_books){ %>
            <% for(var i=0; i<genre_books.length; i++) {%>
            <dt> <a href="<%=genre_books[i].url%>">
                    <%=genre_books[i].title%>
                </a>
            </dt>
            <dd>
                <%=genre_books[i].summary%>
            </dd>
            <% }} else{ %>
            <p>This genre has no books.</p>
            <% } %>

        </dl>
    </div>


    <!-- main -->
    </div>
    </div>
    </div>
    <footer>
        <% include ../../layouts/footer %>
    </footer>

</body>