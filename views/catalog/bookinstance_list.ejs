<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../layouts/head %>
</head>

<body class="container">
    <!-- header -->
    <% include ../layouts/header %>
    <!-- main -->
    <h1>
        <%=title%>
    </h1>
    <ul>
        <%if(bookinstance_list){ %>
        <% for(var i=0; i<bookinstance_list.length; i++) {%>
        <li> <a href="<%=bookinstance_list[i].url%>">
                <%=bookinstance_list[i].imprint%></a>
            <%if(bookinstance_list[i].status=="Available"){ %>
            <span class="text-success">
                <%=bookinstance_list[i].status%></span>
            <% } else if(bookinstance_list[i].status=="Maintenance"){ %>
            <span class="text-danger">
                <%=bookinstance_list[i].status%></span>
            <% } else{ %>
            <span class="text-warning">
                <%=bookinstance_list[i].status%></span>
            <% } %>
            <%if(bookinstance_list[i].status!=="Available"){ %>
            <span>Due:
                <%=bookinstance_list[i].due_back_formatted%></span>
            <% } %>
        </li>
        <% }} else{ %>
        <li>There are no book copies in this library.</li>
        <% } %>
    </ul>


    <!-- main -->
    </div>
    </div>
    </div>
    <footer>
        <% include ../layouts/footer %>
    </footer>

</body>